{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "include": [
    "./src/**/**/*",
    "./spec/**/**/*",
    "./index.ts"
  ]
}